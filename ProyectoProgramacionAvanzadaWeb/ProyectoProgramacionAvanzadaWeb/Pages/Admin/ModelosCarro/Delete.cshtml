@page
@model ProyectoProgramacionAvanzadaWeb.Pages.Admin.ModelosCarro.DeleteModel

@{
    Layout = "~/Pages/Shared/_LayoutAdminDashboard.cshtml";
    ViewData["Title"] = "Delete";
}

<div class="pagetitle">
    <h1>Eliminar Modelo de Carro</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">Admin</li>
            <li class="breadcrumb-item">Modelos</li>
            <li class="breadcrumb-item active">Eliminar</li>
        </ol>
    </nav>
</div>

<section class="section profile">
    <div class="row">
        <div class="col-xl-12">
            <div class="card">
                <div class="card-body pt-3">
                    <h5 class="card-title">¿Estás seguro de eliminar este Modelo de Carro?</h5>
                    <div class="tab-content pt-2">

                        <div class="tab-pane fade show active profile-edit pt-3" id="profile-edit">

                            <div class="row mb-3">
                                <label for="IdModelo" class="col-md-4 col-lg-3 col-form-label">ID de Modelo</label>
                                <div class="col-md-8 col-lg-9">
                                    <input name="idModelo" type="text" class="form-control" id="IdModelo" value="@Model.ModelosCarros.IdModelo" disabled>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label for="IdMarca" class="col-md-4 col-lg-3 col-form-label">ID de Marca</label>
                                <div class="col-md-8 col-lg-9">
                                    <input name="idMarca" type="text" class="form-control" id="IdMarca" value="@Model.ModelosCarros.IdMarca" disabled>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label for="Modelo" class="col-md-4 col-lg-3 col-form-label">Modelo de Carro</label>
                                <div class="col-md-8 col-lg-9">
                                    <input name="modelo" type="text" class="form-control" id="Modelo" value="@Model.ModelosCarros.Modelo" disabled>
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="d-flex justify-content-center">
                                    <form method="post">
                                        <input type="hidden" asp-for="ModelosCarros.IdModelo" />
                                        <input type="submit" value="Eliminar" class="btn btn-danger" />
                                        <a asp-page="Index" class="btn btn-secondary mx-2">Volver a la Lista</a>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

