@page
@model ProyectoProgramacionAvanzadaWeb.Pages.Admin.MetodoDePago.IndexModel

@{
    Layout = "~/Pages/Shared/_LayoutAdminDashboard.cshtml";
    ViewData["Title"] = "Index";
}

<div class="pagetitle">
    <h1>Lista de Métodos de Pago</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="index.html">Admin</a></li>
            <li class="breadcrumb-item">Métodos de Pago</li>
            <li class="breadcrumb-item active">Listar</li>
        </ol>
    </nav>
</div>

<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Métodos de Pago</h5>
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <h4 class="alert-heading">Operación exitosa:</h4>
                            <hr>
                            <p>@TempData["SuccessMessage"]</p>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
                        </div>
                    }
                    <p>
                        <a asp-page="./Create" class="btn btn-success">
                            <i class="bi bi-person-plus"></i> Crear Método de Pago
                        </a>
                    </p>
                    @if (!string.IsNullOrEmpty(Model.Message))
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <h4 class="alert-heading">Error interno del servidor:</h4>
                            <hr>
                            <p>@Model.Message</p>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
                        </div>
                    }
                    else
                    {
                        <table id="dataTable" class="table table-striped table-bordered">
                            <thead class="thead-light">
                                <tr>
                                    <th>Id Método de Pago</th>
                                    <th>Nombre del Método de Pago</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.MetodosDePago)
                                {
                                    <tr>
                                        <td>@item.IdMetodoPago</td>
                                        <td>@Html.DisplayFor(modelItem => item.NombreMetodo)</td>
                                        <td>
                                            <div class="btn-group">
                                                <a asp-page="./Edit" asp-route-id="@item.IdMetodoPago" class="btn btn-primary">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <a asp-page="./Details" asp-route-id="@item.IdMetodoPago" class="btn btn-info">
                                                    <i class="bi bi-info-circle"></i>
                                                </a>
                                                <a asp-page="./Delete" asp-route-id="@item.IdMetodoPago" class="btn btn-danger">
                                                    <i class="bi bi-trash"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

