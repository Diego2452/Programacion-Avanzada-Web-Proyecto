@page
@model ProyectoProgramacionAvanzadaWeb.Pages.Admin.MetodoDePago.DeleteModel

@{
    Layout = "~/Pages/Shared/_LayoutAdminDashboard.cshtml";
    ViewData["Title"] = "Delete";
}

<div class="pagetitle">
    <h1>Detalles Método de Pago</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">Admin</li>
            <li class="breadcrumb-item">Métodos de Pago</li>
            <li class="breadcrumb-item active">Eliminar</li>
        </ol>
    </nav>
</div>

<section class="section profile">
    <div class="row">
        <div class="col-xl-12">
            <div class="card">
                <div class="card-body pt-3">
                    <h5 class="card-title">¿Estás seguro de eliminar este Método de Pago?</h5>
                    <div class="tab-content pt-2">
                        <div class="tab-pane fade show active profile-edit pt-3" id="profile-edit">
                            <div class="row mb-3">
                                <label for="IdMetodoPago" class="col-md-4 col-lg-3 col-form-label">ID de Método de Pago</label>
                                <div class="col-md-8 col-lg-9">
                                    <input name="idMetodoPago" type="text" class="form-control" id="IdMetodoPago" value="@Model.MetodosDePago.IdMetodoPago" disabled>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label for="NombreMetodo" class="col-md-4 col-lg-3 col-form-label">Nombre del Método de Pago</label>
                                <div class="col-md-8 col-lg-9">
                                    <input name="nombreMetodo" type="text" class="form-control" id="NombreMetodo" value="@Model.MetodosDePago.NombreMetodo" disabled>
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="d-flex justify-content-center">
                                    <form method="post">
                                        <input type="hidden" asp-for="MetodosDePago.IdMetodoPago" />
                                        <input type="submit" value="Eliminar" class="btn btn-danger" />
                                        <a asp-page="Index" class="btn btn-secondary mx-2">Volver a la Lista</a>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
