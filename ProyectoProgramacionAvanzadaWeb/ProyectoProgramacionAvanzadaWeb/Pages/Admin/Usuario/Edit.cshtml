@page
@model ProyectoProgramacionAvanzadaWeb.Pages.Admin.Usuario.EditModel

@{
    Layout = "~/Pages/Shared/_LayoutAdminDashboard.cshtml";
    ViewData["Title"] = "Edit";
}

<div class="pagetitle">
    <h1>Crear Usuario</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="index.html">Admin</a></li>
            <li class="breadcrumb-item">Usuarios</li>
            <li class="breadcrumb-item active">Editar</li>
        </ol>
    </nav>
</div>

<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Formulario de Modificacion de Datos</h5>
                    @if (!string.IsNullOrEmpty(Model.Message))
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @if (Model.Message.StartsWith("Error interno del servidor: "))
                            {
                                <h4 class="alert-heading">Error interno del servidor:</h4>
                                <hr>
                                <p>@Model.Message.Substring("Error interno del servidor: ".Length)</p>
                            }
                            else
                            {
                                <h4 class="alert-heading">Errores de validación:</h4>
                                @foreach (var error in Model.Message.Split(new[] { "\n" }, StringSplitOptions.RemoveEmptyEntries))
                                {
                                    <p>@error</p>
                                    <hr>
                                }
                            }
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
                        </div>
                    }

                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <h4 class="alert-heading">Operación exitosa:</h4>
                            <hr>
                            <p>@TempData["SuccessMessage"]</p>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
                        </div>
                    }
                    <form method="post" class="row g-3 needs-validation" novalidate>
                        <input type="hidden" asp-for="Usuarios.IdUsuario" />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="col-md-4 position-relative">
                            <label asp-for="Usuarios.IdTipoIdentificacion" class="form-label">Tipo de Identificacion</label>
                            <select asp-for="Usuarios.IdTipoIdentificacion" asp-items="ViewBag.IdTipoIdentificacion" class="form-select" required>
                            </select>
                            <div class="invalid-tooltip">
                                <span asp-validation-for="Usuarios.IdTipoIdentificacion"></span>
                            </div>
                        </div>
                        <div class="col-md-4 position-relative">
                            <label asp-for="Usuarios.Identificacion" class="form-label">Identificacion</label>
                            <input asp-for="Usuarios.Identificacion" class="form-control" required>
                            <div class="invalid-tooltip">
                                <span asp-validation-for="Usuarios.Identificacion"></span>
                            </div>
                        </div>
                        <div class="col-md-4 position-relative">
                            <label asp-for="Usuarios.IdRol" class="form-label">Rol</label>
                            <select asp-for="Usuarios.IdRol" asp-items="ViewBag.IdRol" class="form-select" required>
                            </select>
                            <div class="invalid-tooltip">
                                <span asp-validation-for="Usuarios.IdRol"></span>
                            </div>
                        </div>
                        <div class="col-md-4 position-relative">
                            <label asp-for="Usuarios.Nombre" class="form-label">Nombre</label>
                            <input asp-for="Usuarios.Nombre" class="form-control" required>
                            <div class="invalid-tooltip">
                                <span asp-validation-for="Usuarios.Nombre"></span>
                            </div>
                        </div>
                        <div class="col-md-4 position-relative">
                            <label asp-for="Usuarios.Apellido_Paterno" class="form-label">Apellido Paterno</label>
                            <input asp-for="Usuarios.Apellido_Paterno" class="form-control" required>
                            <div class="invalid-tooltip">
                                <span asp-validation-for="Usuarios.Apellido_Paterno"></span>
                            </div>
                        </div>
                        <div class="col-md-4 position-relative">
                            <label asp-for="Usuarios.Apellido_Materno" class="form-label">Apellido Paterno</label>
                            <input asp-for="Usuarios.Apellido_Materno" class="form-control" required>
                            <div class="invalid-tooltip">
                                <span asp-validation-for="Usuarios.Apellido_Paterno"></span>
                            </div>
                        </div>
                        <div class="col-md-4 position-relative">
                            <label asp-for="Usuarios.Email" class="form-label">Email</label>
                            <input asp-for="Usuarios.Email" class="form-control" required>
                            <div class="invalid-tooltip">
                                <span asp-validation-for="Usuarios.Email"></span>
                            </div>
                        </div>
                        <div class="col-md-4 position-relative">
                            <label asp-for="Usuarios.IdSexo" class="form-label">Sexo</label>
                            <select asp-for="Usuarios.IdSexo" asp-items="ViewBag.IdSexo" class="form-select" required>
                            </select>
                            <div class="invalid-tooltip">
                                <span asp-validation-for="Usuarios.IdSexo"></span>
                            </div>
                        </div>
                        <div class="col-md-4 position-relative">
                            <label asp-for="Usuarios.Telefono" class="form-label">Teléfono</label>
                            <input asp-for="Usuarios.Telefono" class="form-control" required>
                            <div class="invalid-tooltip">
                                <span asp-validation-for="Usuarios.Telefono"></span>
                            </div>
                        </div>
                        <div class="col-md-12 position-relative">
                            <label asp-for="Usuarios.Direccion" class="form-label">Dirección</label>
                            <textarea asp-for="Usuarios.Direccion" class="form-control" rows="4" required></textarea>
                            <div class="invalid-tooltip">
                                <span asp-validation-for="Usuarios.Direccion"></span>
                            </div>
                        </div>
                        <div class="col-md-6 position-relative">
                            <label asp-for="Usuarios.Contrasenna" class="form-label">Contraseña</label>
                            <input asp-for="Usuarios.Contrasenna" class="form-control" required>
                            <div class="invalid-tooltip">
                                <span asp-validation-for="Usuarios.Contrasenna"></span>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="d-flex justify-content-center">
                                <button type="submit" class="btn btn-primary mx-2">Editar</button>
                                <a asp-page="Index" class="btn btn-secondary mx-2">Volver a la Lista</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
