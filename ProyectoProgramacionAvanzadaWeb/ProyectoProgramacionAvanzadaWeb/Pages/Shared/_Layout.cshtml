<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />

    <title>@ViewData["Title"]</title>
    <meta content="" name="description" />
    <meta content="" name="keywords" />

    <!-- Favicons -->
    <link href="~/assetsHome/img/favicon.png" rel="icon" />
    <link href="~/assetsHome/img/apple-touch-icon.png" rel="apple-touch-icon" />

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,600;1,700&family=Amatic+SC:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,600;1,700&family=Inter:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,600;1,700&display=swap"
          rel="stylesheet" />

    <!-- Vendor CSS Files -->
    <link href="~/assetsHome/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/assetsHome/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet" />
    <link href="~/assetsHome/vendor/aos/aos.css" rel="stylesheet" />
    <link href="~/assetsHome/vendor/glightbox/css/glightbox.min.css" rel="stylesheet" />
    <link href="~/assetsHome/vendor/swiper/swiper-bundle.min.css" rel="stylesheet" />

    <!-- Template Main CSS File -->
    <link href="~/assetsHome/css/main2.css" rel="stylesheet" />

    <!-- =======================================================
    * Template Name: Yummy
    * Updated: Sep 18 2023 with Bootstrap v5.3.2
    * Template URL: https://bootstrapmade.com/yummy-bootstrap-restaurant-website-template/
    * Author: BootstrapMade.com
    * License: https://bootstrapmade.com/license/
    ======================================================== -->
</head>

<body>
    <!-- ======= Header ======= -->
    <header id="header" class="header fixed-top d-flex align-items-center">
        <div class="container d-flex align-items-center justify-content-between">
            <a asp-area="" asp-controller="Home" asp-action="Index" class="logo d-flex align-items-center me-auto me-lg-0">
                <!-- <h1>Luxury Cars<span>.</span></h1> -->
                <img src="~/assetsHome/img/Logo.png" alt="Luxury Cars Logo" style="height=100px">
            </a>

            <nav id="navbar" class="navbar">
                <ul>
                    <li><a asp-page="/Index" asp-fragment="hero" 
                        style="color:white">Inicio</a></li>
                    <li><a asp-page="/Index" asp-fragment="about" 
                        style="color:white">Sobre Nosotros</a></li>
                    <li><a asp-page="/Index" asp-fragment="events" 
                        style="color:white">Eventos</a></li>
                    <li><a asp-page="/Index" asp-fragment="chefs" 
                        style="color:white">Servicios</a></li>
                    <li><a asp-page="/Index" asp-fragment="gallery" 
                        style="color:white">Galeria</a></li>
                    <li><a asp-page="/Index" asp-fragment="contact" 
                        style="color:white">Contactenos</a></li>
                    <li><p style="font-size:50px" 
                        style="color:white">|</p></li>
                    <li><a href="#cars" 
                        style="color:white">Vehiculos</a></li>
                    <li><a asp-page="Usuario/Productos" 
                        style="color:white">Productos</a></li>

                    <li class="dropdown">
                        <a href="#">
                            <span style="color:white">Usuario</span>
                            <i class="bi bi-chevron-down dropdown-indicator"></i>
                        </a>
                        <ul>
                            @if (!(bool)ViewData["EsUsuarioAutenticado"])
                            {
                                <li><a asp-page="Auth/Login/Index">Inicio de Sesion</a></li>
                            }
                            else
                            {
                                <li><a asp-area="" asp-page="/Admin/Index">Panel Administrador</a></li>
                            }
                        </ul>
                    </li>
                </ul>
            </nav>
            <!-- .navbar -->
            <i class="mobile-nav-toggle mobile-nav-show bi bi-list"></i>
            <i class="mobile-nav-toggle mobile-nav-hide d-none bi bi-x"></i>
        </div>
    </header>
    <!-- End Header -->

    <main id="main">@RenderBody()</main>
    <!-- End #main -->
    <!-- ======= Footer ======= -->
    <footer id="footer" class="footer">
        <div class="container">
            <div class="row gy-3">
                <!-- Dirección -->
                <div class="col-lg-3 col-md-6 d-flex">
                    <i class="bi bi-geo-alt icon"></i>
                    <div>
                        <h4>Dirección</h4>
                        <p>
                            650 metros oeste de la Fuente de la Hispanidad<br />
                            San Pedro, San José, Costa Rica.
                        </p>
                    </div>
                </div>

                <!-- Contacto -->
                <div class="col-lg-3 col-md-6 footer-links d-flex">
                    <i class="bi bi-envelope icon"></i>
                    <div>
                        <h4>Correo Electrónico</h4>
                        <p>
                            consultas@luxurycars.ac.cr
                        </p>
                    </div>
                </div>

                <!-- Teléfono -->
                <div class="col-lg-3 col-md-6 footer-links d-flex">
                    <i class="bi bi-telephone icon"></i>
                    <div>
                        <h4>Teléfono</h4>
                        <p>
                            +506 8020 7020
                        </p>
                    </div>
                </div>

                <!-- Horario de Atención -->
                <div class="col-lg-3 col-md-6 footer-links d-flex">
                    <i class="bi bi-clock icon"></i>
                    <div>
                        <h4>Horario de Atención</h4>
                        <p>
                            Lun-Sáb: 7:00 AM - 11:00 PM<br />
                            Domingo: 7:00 AM - 5 PM
                        </p>
                    </div>
                </div>

                <!-- Redes Sociales (opcional) -->
                <div class="col-lg-3 col-md-6 footer-links">
                    <h4>Síguenos</h4>
                    <div class="social-links d-flex">
                        <a href="#" class="twitter"><i class="bi bi-twitter"></i></a>
                        <a href="#" class="facebook"><i class="bi bi-facebook"></i></a>
                        <a href="#" class="instagram"><i class="bi bi-instagram"></i></a>
                        <a href="#" class="linkedin"><i class="bi bi-linkedin"></i></a>
                    </div>
                </div>
            </div>
        </div>

        <div class="container">
            <div class="copyright">
                &copy; 2023 -
                <strong><span>Luxury Cars fue hecho por el Grupo conformado por Diego Vargas Salas, Anthony Dario Fajardo Villachica, Minor Alonso Pereira Villalobos y Daniel Jesus Diaz Chong </span></strong>. Todos los derechos reservados
            </div>
            <div class="credits">
                <!-- Todos los enlaces en el pie de página deben mantenerse intactos. -->
                <!-- Puedes eliminar los enlaces solo si compraste la versión pro. -->
                <!-- Información de licencia: https://bootstrapmade.com/license/ -->
                <!-- Compra la versión pro con un formulario de contacto PHP/AJAX funcional: https://bootstrapmade.com/yummy-bootstrap-restaurant-website-template/ -->
                Diseñado por <a href="https://bootstrapmade.com/">BootstrapMade</a>
            </div>
        </div>
    </footer>
    <!-- End Footer -->

    <a href="#" class="scroll-top d-flex align-items-center justify-content-center">
        <i class="bi bi-arrow-up-short"></i>
    </a>

    <div id="preloader"></div>

    <!-- Vendor JS Files -->
    <script src="~/assetsHome/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/assetsHome/vendor/aos/aos.js"></script>
    <script src="~/assetsHome/vendor/glightbox/js/glightbox.min.js"></script>
    <script src="~/assetsHome/vendor/purecounter/purecounter_vanilla.js"></script>
    <script src="~/assetsHome/vendor/swiper/swiper-bundle.min.js"></script>
    <script src="~/assetsHome/vendor/php-email-form/validate.js"></script>

    @await RenderSectionAsync("Scripts", required: false)

    <!-- Template Main JS File -->
    <script src="~/assetsHome/js/main.js"></script>
</body>

</html>